<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sunrinthon2021" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">0.03</item>
        <item name="android:spotShadowAlpha">0.03</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/productr</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDefault</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonStyleColored" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/productb</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyleBorder" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/productb</item>
        <item name="android:background">@drawable/round_box_border</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/materialGray6</item>
        <item name="android:fontFamily">@font/productb</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/productb</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/materialDarkBlack</item>
    </style>

</resources>